{
  "manifest_version": 3,
  "name": "Roblox Load All Badges",
  "version": "3.0",
  "description": "Adds a \"See All\" to Badges in Roblox Games/Experiences",
  
  "icons": {
    "48": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.roblox.com/games/*"],
      "js": ["doit.js", "contentscript.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["script.js"],
      "matches": ["*://www.roblox.com/games/*"]
    }
  ]
}